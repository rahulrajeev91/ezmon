<Window x:Class="EzMon_V0._01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ezMon" Height="350" Width="525" MinWidth="800" MinHeight="600" Background="#FF595959" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Margin="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1" Margin="0" Name="ChartGrid">
                <WindowsFormsHost Margin="0" Name="ChartHost" />
            </Grid>
            <Grid Name="leftColumn" Margin="5,5,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="106*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1" Margin="0" Name="HRGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35" />
                        <RowDefinition Height="3" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Heart Rate" Foreground="White" FontSize="30" />
                    <TextBlock Name="tbHeartRate" Text="--" Foreground="#FF00CBFF" FontSize="100" Margin="0,0,33,0" HorizontalAlignment="Right" Width="157" FontStretch="Normal" FontWeight="Normal" Height="113" VerticalAlignment="Bottom" Grid.RowSpan="3" TextAlignment="Right" />
                    <Canvas Grid.Row="1" Margin="0" Background="#FFFF6500" />
                    <Label Content="bpm" Grid.Row="2" Margin="0" Name="label1" Height="Auto" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="Auto" Padding="0" FontSize="16" Foreground="White" />
                </Grid>

                <Grid Grid.Row="2" Margin="0" Name="tempGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35" />
                        <RowDefinition Height="3" />
                        <RowDefinition Height="62" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Temperature" Foreground="White" FontSize="30" />
                    <TextBlock Name="tbTemperature" Text="--" Foreground="#FF00CBFF" FontSize="70" Margin="0,22,33,0" HorizontalAlignment="Right" Width="89" FontStretch="Normal" FontWeight="Normal" Grid.RowSpan="3" TextAlignment="Right" />
                    <Canvas Grid.Row="1" Margin="0" Background="#FFFF6500" />
                    <Label Grid.Row="2" Margin="0" Height="Auto" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="Auto" Padding="0" FontSize="16" Foreground="White" >
                        <Label.Content>
                            <TextBlock>
                                <Run BaselineAlignment="Superscript" FontSize="6pt">o</Run>C
                            </TextBlock>
                        </Label.Content>
                    </Label>
                </Grid>

                <ScrollViewer Visibility="Collapsed" Grid.Row="4" Margin="0,0,0,5" VerticalScrollBarVisibility="Visible" VerticalContentAlignment="Bottom">
                    <TextBlock   Name="debugText" Text="" Margin="10,0,0,0" />
                </ScrollViewer>

                <Grid Grid.Row="3" Margin="5,20,5,5" Name="fallGrid" Visibility="Collapsed">
                    <Rectangle RadiusX="5" RadiusY="5" Fill="#FFFF6500" />
                    <Label Margin="0" Content="FALL DETECTED" FontSize="24" FontWeight="Normal" Foreground="White" FontStretch="Condensed" Padding="10,30" HorizontalContentAlignment="Center" />
                </Grid>
        </Grid>
        </Grid>
        <Grid Margin="0" Name="top">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" Margin="0" Background="#FF00CBFF"></Grid>
            <Canvas Grid.Row="2" Margin="0" Background="#FF000000" />
            <Image HorizontalAlignment="Left" Margin="10" Stretch="Uniform" Width="Auto" Source="/EzMon_V0.01;component/Images/ezMon%20logo_horizaonta_black_lowres.png" />
            <Button Content="CONNECT" Name="ConnectDisconnectButton" Width="172" HorizontalAlignment="Right" Margin="0,10,10,10" FontSize="24" Foreground="White" Background="#ffff6500" FontWeight="Bold" FontFamily="Roboto" Click="ConnectDisconnectButton_Click"></Button>
        </Grid>
        <Grid Grid.Row="2" Margin="0" Name="grid2" Background="#FF00CBFF">
            <ComboBox Name="cbPort" Margin="0,5,5,0" HorizontalAlignment="Right" Width="106" Background="#00000000" DropDownOpened="cbPort_DropDownOpened" />
            <Label Margin="5,0" HorizontalAlignment="Left" Width="106" Background="#00000000" Name="timerTick" />
            <Label Margin="135,0,0,0" HorizontalAlignment="Left" Width="106" Background="#00000000" Name="datacount" >
            </Label>
        </Grid>
    </Grid>
</Window>
